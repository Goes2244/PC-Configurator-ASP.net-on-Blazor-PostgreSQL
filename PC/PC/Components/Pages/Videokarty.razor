@page "/videokarty"
@using PC.Data.Models
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore;
@inject Microsoft.EntityFrameworkCore.IDbContextFactory<PC.Data.AppDbContext> DbContextFactory
@inject Microsoft.JSInterop.IJSRuntime JSRuntime

<PageTitle>Видеокарты</PageTitle>

<!--
    Компонент для управления видеокартами в системе конфигурации ПК.
    Предоставляет интерфейс для просмотра, добавления, редактирования и удаления видеокарт.
-->
<div class="container mt-4">
    <h3><i class="bi bi-gpu-card"></i> Управление видеокартами</h3>
    
    <!-- Кнопка для открытия формы добавления новой видеокарты -->
    <button class="btn btn-primary mb-3" @onclick="ShowAddForm">
        <i class="bi bi-plus-circle"></i> Добавить новую видеокарту
    </button>
    
    @if (showForm)
    {
        <div class="card mb-4">
            <div class="card-header">
                <!-- Динамический заголовок формы в зависимости от режима -->
                @(editingItem == null ? "Добавление видеокарты" : "Редактирование видеокарты")
            </div>
            <div class="card-body">
                <!-- Форма редактирования с валидацией -->
                <EditForm Model="@currentItem" OnValidSubmit="@SaveItem">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    
                    <!-- Поле для ввода модели видеокарты -->
                    <div class="mb-3">
                        <label class="form-label">Модель *</label>
                        <InputText @bind-Value="currentItem.Model" class="form-control" />
                        <ValidationMessage For="@(() => currentItem.Model)" />
                    </div>
                    
                    <!-- Группа полей для технических характеристик -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Вычислительная мощность *</label>
                            <InputText @bind-Value="currentItem.VychislitelnayaMoshchnost" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.VychislitelnayaMoshchnost)" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Объем памяти (ГБ) *</label>
                            <InputNumber @bind-Value="currentItem.ObyemPamyatiGb" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.ObyemPamyatiGb)" />
                        </div>
                    </div>
                    
                    <!-- Группа полей для мощности и цены -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Мощность (Вт) *</label>
                            <InputNumber @bind-Value="currentItem.Moshchnost" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.Moshchnost)" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Цена (₽) *</label>
                            <InputNumber @bind-Value="currentItem.Tsena" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.Tsena)" />
                        </div>
                    </div>
                    
                    <!-- Кнопки действий формы -->
                    <div class="mt-3">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Сохранить
                        </button>
                        <button type="button" class="btn btn-secondary" @onclick="CancelEdit">
                            <i class="bi bi-x-circle"></i> Отмена
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    }
    
    @if (videokarty == null)
    {
        <!-- Сообщение о загрузке данных -->
        <div class="alert alert-info">
            <i class="bi bi-hourglass-split"></i> Загрузка данных...
        </div>
    }
    else if (!videokarty.Any())
    {
        <!-- Сообщение об отсутствии данных -->
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Нет данных. Добавьте первую видеокарту.
        </div>
    }
    else
    {
        <!-- Таблица со списком видеокарт -->
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Модель</th>
                        <th>Вычислительная мощность</th>
                        <th>Объем памяти</th>
                        <th>Мощность</th>
                        <th>Цена</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in videokarty)
                    {
                        <!-- Строка для каждой видеокарты -->
                        <tr>
                            <td>@item.Model</td>
                            <td>@item.VychislitelnayaMoshchnost</td>
                            <td>@item.ObyemPamyatiGb ГБ</td>
                            <td>@item.Moshchnost Вт</td>
                            <td>@item.Tsena.ToString("N2") ₽</td>
                            <td>
                                <!-- Кнопки действий для каждой видеокарты -->
                                <button class="btn btn-sm btn-warning me-2" @onclick="() => EditItem(item)" title="Редактировать">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteItem(item)" title="Удалить">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    /// <summary>
    /// Список видеокарт, загруженных из базы данных.
    /// </summary>
    private List<Videokarta>? videokarty;
    
    /// <summary>
    /// Флаг, указывающий, отображается ли форма редактирования.
    /// </summary>
    private bool showForm = false;
    
    /// <summary>
    /// Текущий элемент, редактируемый в форме.
    /// </summary>
    private Videokarta currentItem = new();
    
    /// <summary>
    /// Элемент, который редактируется (null при добавлении нового).
    /// </summary>
    private Videokarta? editingItem;
    
    /// <summary>
    /// Метод жизненного цикла, вызываемый при инициализации компонента.
    /// Загружает данные о видеокартах из базы данных.
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }
    
    /// <summary>
    /// Загружает список видеокарт из базы данных.
    /// </summary>
    /// <remarks>
    /// Создает новый контекст базы данных с использованием фабрики,
    /// асинхронно получает все записи из таблицы Videokarty.
    /// </remarks>
    private async Task LoadData()
    {
        using var context = await DbContextFactory.CreateDbContextAsync();
        videokarty = await context.Videokarty.ToListAsync();
    }
    
    /// <summary>
    /// Отображает форму для добавления новой видеокарты.
    /// Сбрасывает текущий элемент и скрывает режим редактирования.
    /// </summary>
    private void ShowAddForm()
    {
        currentItem = new Videokarta();
        editingItem = null;
        showForm = true;
    }
    
    /// <summary>
    /// Начинает редактирование существующей видеокарты.
    /// </summary>
    /// <param name="item">Видеокарта для редактирования.</param>
    /// <remarks>
    /// Создает новый объект с копией данных из выбранного элемента,
    /// чтобы избежать прямого изменения данных до сохранения.
    /// </remarks>
    private void EditItem(Videokarta item)
    {
        currentItem = new Videokarta 
        { 
            Model = item.Model,
            VychislitelnayaMoshchnost = item.VychislitelnayaMoshchnost,
            ObyemPamyatiGb = item.ObyemPamyatiGb,
            Moshchnost = item.Moshchnost,
            Tsena = item.Tsena
        };
        editingItem = item;
        showForm = true;
    }
    
    /// <summary>
    /// Сохраняет изменения в базе данных.
    /// </summary>
    /// <remarks>
    /// В зависимости от режима (добавление или редактирование) выполняет:
    /// 1. При добавлении: добавляет новый элемент в контекст.
    /// 2. При редактировании: обновляет существующий элемент.
    ///    Если изменился ключ (модель), удаляет старый и добавляет новый.
    /// После успешного сохранения перезагружает данные и показывает уведомление.
    /// </remarks>
    private async Task SaveItem()
    {
        using var context = await DbContextFactory.CreateDbContextAsync();
    
        try
        {
            if (editingItem == null)
            {
                // Режим добавления новой видеокарты
                context.Videokarty.Add(currentItem);
            }
            else
            {
                // Режим редактирования существующей видеокарты
                if (currentItem.Model != editingItem.Model)
                {
                    // Если изменился ключ (модель), удаляем старую и добавляем новую
                    context.Videokarty.Remove(editingItem);
                    context.Videokarty.Add(currentItem);
                }
                else
                {
                    // Если ключ не изменился, обновляем существующую запись
                    var entity = context.Videokarty
                        .FirstOrDefault(e => e.Model == currentItem.Model);
                
                    if (entity != null)
                    {
                        entity.VychislitelnayaMoshchnost = currentItem.VychislitelnayaMoshchnost;
                        entity.ObyemPamyatiGb = currentItem.ObyemPamyatiGb;
                        entity.Moshchnost = currentItem.Moshchnost;
                        entity.Tsena = currentItem.Tsena;
                    }
                }
            }
        
            await context.SaveChangesAsync();
            showForm = false;
            await LoadData();
        
            // Показываем уведомление об успешном сохранении
            await JSRuntime.InvokeVoidAsync("alert", "Данные успешно сохранены!");
        }
        catch (Exception ex)
        {
            // Обработка ошибок и показ сообщения пользователю
            await JSRuntime.InvokeVoidAsync("alert", $"Ошибка: {ex.Message}");
        }
    }
    
    /// <summary>
    /// Удаляет видеокарту из базы данных после подтверждения пользователем.
    /// </summary>
    /// <param name="item">Видеокарта для удаления.</param>
    /// <remarks>
    /// Показывает диалог подтверждения через JavaScript.
    /// Если пользователь подтверждает, удаляет элемент из контекста,
    /// сохраняет изменения и перезагружает данные.
    /// </remarks>
    private async Task DeleteItem(Videokarta item)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"Вы уверены, что хотите удалить видеокарту '{item.Model}'?"))
        {
            using var context = await DbContextFactory.CreateDbContextAsync();
            context.Videokarty.Remove(item);
            await context.SaveChangesAsync();
            await LoadData();
            
            await JSRuntime.InvokeVoidAsync("alert", "Видеокарта успешно удалена!");
        }
    }
    
    /// <summary>
    /// Отменяет редактирование и скрывает форму.
    /// </summary>
    private void CancelEdit()
    {
        showForm = false;
        currentItem = new Videokarta();
    }
}