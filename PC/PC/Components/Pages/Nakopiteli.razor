@* 
  Страница управления накопителями данных (SSD/HDD) в системе подбора компьютерных компонентов.
  Предоставляет интерфейс для просмотра, добавления, редактирования и удаления накопителей.
  Путь маршрута: /nakopiteli
*@

@page "/nakopiteli"
@rendermode InteractiveServer
@using PC.Data.Models
@using Microsoft.EntityFrameworkCore;
@inject Microsoft.EntityFrameworkCore.IDbContextFactory<PC.Data.AppDbContext> DbContextFactory
@inject Microsoft.JSInterop.IJSRuntime JSRuntime

<PageTitle>Накопители</PageTitle>

<div class="container mt-4">
    <h3><i class="bi bi-hdd"></i> Управление накопителями</h3>
    
    <button class="btn btn-primary mb-3" @onclick="ShowAddForm">
        <i class="bi bi-plus-circle"></i> Добавить новый накопитель
    </button>
    
    @if (showForm)
    {
        <div class="card mb-4">
            <div class="card-header">
                @(editingItem == null ? "Добавление накопителя" : "Редактирование накопителя")
            </div>
            <div class="card-body">
                <EditForm Model="@currentItem" OnValidSubmit="@SaveItem">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    
                    <div class="mb-3">
                        <label class="form-label">Модель *</label>
                        <InputText @bind-Value="currentItem.Model" class="form-control" />
                        <ValidationMessage For="@(() => currentItem.Model)" />
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Тип *</label>
                            <InputText @bind-Value="currentItem.Tip" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.Tip)" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Объем (ГБ) *</label>
                            <InputNumber @bind-Value="currentItem.ObyomGb" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.ObyomGb)" />
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Скорость чтения (МБ/с) *</label>
                            <InputNumber @bind-Value="currentItem.SkorostChteniyaMbS" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.SkorostChteniyaMbS)" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Скорость записи (МБ/с) *</label>
                            <InputNumber @bind-Value="currentItem.SkorostZapisiMbS" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.SkorostZapisiMbS)" />
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Цена (₽) *</label>
                        <InputNumber @bind-Value="currentItem.Tsena" class="form-control" />
                        <ValidationMessage For="@(() => currentItem.Tsena)" />
                    </div>
                    
                    <div class="mt-3">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Сохранить
                        </button>
                        <button type="button" class="btn btn-secondary" @onclick="CancelEdit">
                            <i class="bi bi-x-circle"></i> Отмена
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    }
    
    @if (nakopiteli == null)
    {
        <div class="alert alert-info">
            <i class="bi bi-hourglass-split"></i> Загрузка данных...
        </div>
    }
    else if (!nakopiteli.Any())
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Нет данных. Добавьте первый накопитель.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Модель</th>
                        <th>Тип</th>
                        <th>Объем</th>
                        <th>Чтение</th>
                        <th>Запись</th>
                        <th>Цена</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in nakopiteli)
                    {
                        <tr>
                            <td>@item.Model</td>
                            <td>@item.Tip</td>
                            <td>@item.ObyomGb ГБ</td>
                            <td>@item.SkorostChteniyaMbS МБ/с</td>
                            <td>@item.SkorostZapisiMbS МБ/с</td>
                            <td>@item.Tsena.ToString("N2") ₽</td>
                            <td>
                                <button class="btn btn-sm btn-warning me-2" @onclick="() => EditItem(item)" title="Редактировать">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteItem(item)" title="Удалить">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    /// <summary>
    /// Список накопителей, загруженных из базы данных.
    /// </summary>
    /// <value>Список объектов <see cref="Nakopitel"/> или null, если данные еще не загружены.</value>
    private List<Nakopitel>? nakopiteli;
    
    /// <summary>
    /// Флаг отображения формы редактирования/добавления.
    /// </summary>
    /// <value>true - форма отображается, false - форма скрыта.</value>
    private bool showForm = false;
    
    /// <summary>
    /// Текущий редактируемый накопитель.
    /// </summary>
    /// <value>Объект <see cref="Nakopitel"/>, содержащий данные формы.</value>
    private Nakopitel currentItem = new();
    
    /// <summary>
    /// Исходный накопитель при редактировании (если есть).
    /// </summary>
    /// <value>Объект <see cref="Nakopitel"/> или null, если создается новый элемент.</value>
    private Nakopitel? editingItem;
    
    /// <summary>
    /// Инициализация компонента при загрузке страницы.
    /// </summary>
    /// <remarks>
    /// Вызывается автоматически при первоначальной загрузке компонента.
    /// Загружает данные накопителей из базы данных.
    /// </remarks>
    /// <returns>Задача, представляющая асинхронную операцию.</returns>
    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }
    
    /// <summary>
    /// Загружает список накопителей из базы данных.
    /// </summary>
    /// <remarks>
    /// Использует фабрику контекста базы данных для создания экземпляра <see cref="AppDbContext"/>.
    /// Получает все записи из таблицы накопителей и сохраняет их в свойстве <see cref="nakopiteli"/>.
    /// </remarks>
    /// <returns>Задача, представляющая асинхронную операцию.</returns>
    private async Task LoadData()
    {
        using var context = await DbContextFactory.CreateDbContextAsync();
        nakopiteli = await context.Nakopiteli.ToListAsync();
    }
    
    /// <summary>
    /// Отображает форму для добавления нового накопителя.
    /// </summary>
    /// <remarks>
    /// Сбрасывает текущий элемент и скрывает ссылку на редактируемый элемент.
    /// Устанавливает флаг <see cref="showForm"/> в true для отображения формы.
    /// </remarks>
    private void ShowAddForm()
    {
        currentItem = new Nakopitel();
        editingItem = null;
        showForm = true;
    }
    
    /// <summary>
    /// Подготавливает форму для редактирования существующего накопителя.
    /// </summary>
    /// <param name="item">Накопитель для редактирования.</param>
    /// <remarks>
    /// Создает копию данных накопителя для редактирования в форме.
    /// Сохраняет ссылку на исходный элемент в <see cref="editingItem"/>.
    /// Устанавливает флаг <see cref="showForm"/> в true для отображения формы.
    /// </remarks>
    private void EditItem(Nakopitel item)
    {
        currentItem = new Nakopitel 
        { 
            Model = item.Model,
            Tip = item.Tip,
            ObyomGb = item.ObyomGb,
            SkorostChteniyaMbS = item.SkorostChteniyaMbS,
            SkorostZapisiMbS = item.SkorostZapisiMbS,
            Tsena = item.Tsena
        };
        editingItem = item;
        showForm = true;
    }
    
    /// <summary>
    /// Сохраняет изменения накопителя в базе данных.
    /// </summary>
    /// <remarks>
    /// Выполняет операции в зависимости от режима:
    /// 1. Добавление: добавляет новый накопитель.
    /// 2. Редактирование с изменением модели: удаляет старый и добавляет новый.
    /// 3. Редактирование без изменения модели: обновляет существующий накопитель.
    /// После успешного сохранения скрывает форму, перезагружает данные и показывает уведомление.
    /// В случае ошибки показывает сообщение об ошибке.
    /// </remarks>
    /// <returns>Задача, представляющая асинхронную операцию.</returns>
    private async Task SaveItem()
    {
        using var context = await DbContextFactory.CreateDbContextAsync();
    
        try
        {
            if (editingItem == null)
            {
                // Добавление нового накопителя
                context.Nakopiteli.Add(currentItem);
            }
            else
            {
                if (currentItem.Model != editingItem.Model)
                {
                    // Изменение модели (ключа) - удаляем старый, добавляем новый
                    context.Nakopiteli.Remove(editingItem);
                    context.Nakopiteli.Add(currentItem);
                }
                else
                {
                    // Обновление существующего накопителя
                    var entity = context.Nakopiteli
                        .FirstOrDefault(e => e.Model == currentItem.Model);
                
                    if (entity != null)
                    {
                        entity.Tip = currentItem.Tip;
                        entity.ObyomGb = currentItem.ObyomGb;
                        entity.SkorostChteniyaMbS = currentItem.SkorostChteniyaMbS;
                        entity.SkorostZapisiMbS = currentItem.SkorostZapisiMbS;
                        entity.Tsena = currentItem.Tsena;
                    }
                }
            }
        
            await context.SaveChangesAsync();
            showForm = false;
            await LoadData();
        
            await JSRuntime.InvokeVoidAsync("alert", "Данные успешно сохранены!");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Ошибка: {ex.Message}");
        }
    }
    
    /// <summary>
    /// Удаляет накопитель из базы данных после подтверждения пользователем.
    /// </summary>
    /// <param name="item">Накопитель для удаления.</param>
    /// <remarks>
    /// Показывает диалог подтверждения с использованием JavaScript.
    /// Если пользователь подтверждает удаление, удаляет накопитель из базы данных,
    /// перезагружает данные и показывает уведомление об успешном удалении.
    /// </remarks>
    /// <returns>Задача, представляющая асинхронную операцию.</returns>
    private async Task DeleteItem(Nakopitel item)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"Вы уверены, что хотите удалить накопитель '{item.Model}'?"))
        {
            using var context = await DbContextFactory.CreateDbContextAsync();
            context.Nakopiteli.Remove(item);
            await context.SaveChangesAsync();
            await LoadData();
            
            await JSRuntime.InvokeVoidAsync("alert", "Накопитель успешно удален!");
        }
    }
    
    /// <summary>
    /// Отменяет редактирование и скрывает форму.
    /// </summary>
    /// <remarks>
    /// Сбрасывает флаг отображения формы и очищает текущий элемент.
    /// </remarks>
    private void CancelEdit()
    {
        showForm = false;
        currentItem = new Nakopitel();
    }
}