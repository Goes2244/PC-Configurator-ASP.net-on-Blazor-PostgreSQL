@page "/korpusa"
@rendermode InteractiveServer
@using PC.Data.Models
@using Microsoft.EntityFrameworkCore;
@inject Microsoft.EntityFrameworkCore.IDbContextFactory<PC.Data.AppDbContext> DbContextFactory
@inject Microsoft.JSInterop.IJSRuntime JSRuntime

<PageTitle>Корпуса</PageTitle>

<div class="container mt-4">
    <h3><i class="bi bi-pc"></i> Управление корпусами</h3>
    
    <button class="btn btn-primary mb-3" @onclick="ShowAddForm">
        <i class="bi bi-plus-circle"></i> Добавить новый корпус
    </button>
    
    @if (showForm)
    {
        <div class="card mb-4">
            <div class="card-header">
                @(editingItem == null ? "Добавление корпуса" : "Редактирование корпуса")
            </div>
            <div class="card-body">
                <EditForm Model="@currentItem" OnValidSubmit="@SaveItem">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    
                    <div class="mb-3">
                        <label class="form-label">Модель *</label>
                        <InputText @bind-Value="currentItem.Model" class="form-control" />
                        <ValidationMessage For="@(() => currentItem.Model)" />
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Поддерживаемые форм-факторы *</label>
                            <InputText @bind-Value="currentItem.PodderzhivayemyyeFormFaktory" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.PodderzhivayemyyeFormFaktory)" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Размеры *</label>
                            <InputText @bind-Value="currentItem.Razmery" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.Razmery)" />
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Цена (₽) *</label>
                        <InputNumber @bind-Value="currentItem.Tsena" class="form-control" />
                        <ValidationMessage For="@(() => currentItem.Tsena)" />
                    </div>
                    
                    <div class="mt-3">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Сохранить
                        </button>
                        <button type="button" class="btn btn-secondary" @onclick="CancelEdit">
                            <i class="bi bi-x-circle"></i> Отмена
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    }
    
    @if (korpusa == null)
    {
        <div class="alert alert-info">
            <i class="bi bi-hourglass-split"></i> Загрузка данных...
        </div>
    }
    else if (!korpusa.Any())
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Нет данных. Добавьте первый корпус.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Модель</th>
                        <th>Форм-факторы</th>
                        <th>Размеры</th>
                        <th>Цена</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in korpusa)
                    {
                        <tr>
                            <td>@item.Model</td>
                            <td>@item.PodderzhivayemyyeFormFaktory</td>
                            <td>@item.Razmery</td>
                            <td>@item.Tsena.ToString("N2") ₽</td>
                            <td>
                                <button class="btn btn-sm btn-warning me-2" @onclick="() => EditItem(item)" title="Редактировать">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteItem(item)" title="Удалить">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    /// <summary>
    /// Список корпусов для отображения в таблице.
    /// </summary>
    /// <value>Коллекция объектов <see cref="Korpus"/>. Null во время загрузки данных.</value>
    private List<Korpus>? korpusa;
    
    /// <summary>
    /// Флаг отображения формы добавления/редактирования корпуса.
    /// </summary>
    /// <value>True, если форма должна быть видима; иначе False.</value>
    private bool showForm = false;
    
    /// <summary>
    /// Текущий редактируемый корпус (данные формы).
    /// </summary>
    /// <value>Объект <see cref="Korpus"/>, содержащий данные из полей формы.</value>
    private Korpus currentItem = new();
    
    /// <summary>
    /// Оригинальный корпус, который редактируется (если редактирование).
    /// </summary>
    /// <value>Объект <see cref="Korpus"/> из списка korpusa или null при добавлении нового.</value>
    private Korpus? editingItem;
    
    /// <summary>
    /// Инициализирует компонент при загрузке страницы.
    /// </summary>
    /// <remarks>
    /// Этот метод вызывается при первоначальном рендеринге компонента и загружает данные корпусов из базы данных.
    /// </remarks>
    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }
    
    /// <summary>
    /// Загружает список корпусов из базы данных.
    /// </summary>
    /// <returns>Задача, представляющая асинхронную операцию загрузки данных.</returns>
    /// <remarks>
    /// Использует <see cref="DbContextFactory"/> для создания контекста БД и получения всех записей из таблицы Korpusa.
    /// После загрузки данных обновляет состояние компонента для перерисовки UI.
    /// </remarks>
    private async Task LoadData()
    {
        using var context = await DbContextFactory.CreateDbContextAsync();
        korpusa = await context.Korpusa.ToListAsync();
    }
    
    /// <summary>
    /// Отображает форму для добавления нового корпуса.
    /// </summary>
    /// <remarks>
    /// Сбрасывает текущий элемент и очищает форму.
    /// Устанавливает флаг <see cref="showForm"/> в true для отображения формы.
    /// </remarks>
    private void ShowAddForm()
    {
        currentItem = new Korpus();
        editingItem = null;
        showForm = true;
    }
    
    /// <summary>
    /// Начинает редактирование выбранного корпуса.
    /// </summary>
    /// <param name="item">Корпус, который нужно отредактировать.</param>
    /// <remarks>
    /// Создает копию выбранного корпуса для редактирования и сохраняет ссылку на оригинал.
    /// Устанавливает флаг <see cref="showForm"/> в true для отображения формы с данными выбранного корпуса.
    /// </remarks>
    private void EditItem(Korpus item)
    {
        currentItem = new Korpus 
        { 
            Model = item.Model,
            PodderzhivayemyyeFormFaktory = item.PodderzhivayemyyeFormFaktory,
            Razmery = item.Razmery,
            Tsena = item.Tsena
        };
        editingItem = item;
        showForm = true;
    }
    
    /// <summary>
    /// Сохраняет изменения (добавляет новый или обновляет существующий корпус).
    /// </summary>
    /// <returns>Задача, представляющая асинхронную операцию сохранения.</returns>
    /// <remarks>
    /// В зависимости от значения <see cref="editingItem"/>:
    /// <list type="bullet">
    /// <item>Если editingItem == null, добавляет новый корпус в базу данных.</item>
    /// <item>Если editingItem != null и изменилась модель, удаляет старую запись и добавляет новую.</item>
    /// <item>Если editingItem != null и модель не изменилась, обновляет существующую запись.</item>
    /// </list>
    /// После сохранения скрывает форму, перезагружает данные и показывает уведомление.
    /// </remarks>
    private async Task SaveItem()
    {
        using var context = await DbContextFactory.CreateDbContextAsync();
    
        try
        {
            if (editingItem == null)
            {
                context.Korpusa.Add(currentItem);
            }
            else
            {
                if (currentItem.Model != editingItem.Model)
                {
                    context.Korpusa.Remove(editingItem);
                    context.Korpusa.Add(currentItem);
                }
                else
                {
                    var entity = context.Korpusa
                        .FirstOrDefault(e => e.Model == currentItem.Model);
                
                    if (entity != null)
                    {
                        entity.PodderzhivayemyyeFormFaktory = currentItem.PodderzhivayemyyeFormFaktory;
                        entity.Razmery = currentItem.Razmery;
                        entity.Tsena = currentItem.Tsena;
                    }
                }
            }
        
            await context.SaveChangesAsync();
            showForm = false;
            await LoadData();
        
            await JSRuntime.InvokeVoidAsync("alert", "Данные успешно сохранены!");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Ошибка: {ex.Message}");
        }
    }
    
    /// <summary>
    /// Удаляет выбранный корпус после подтверждения пользователем.
    /// </summary>
    /// <param name="item">Корпус для удаления.</param>
    /// <returns>Задача, представляющая асинхронную операцию удаления.</returns>
    /// <remarks>
    /// Показывает диалог подтверждения через JavaScript.
    /// Если пользователь подтверждает удаление, удаляет корпус из базы данных.
    /// После удаления перезагружает данные и показывает уведомление.
    /// </remarks>
    private async Task DeleteItem(Korpus item)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"Вы уверены, что хотите удалить корпус '{item.Model}'?"))
        {
            using var context = await DbContextFactory.CreateDbContextAsync();
            context.Korpusa.Remove(item);
            await context.SaveChangesAsync();
            await LoadData();
            
            await JSRuntime.InvokeVoidAsync("alert", "Корпус успешно удален!");
        }
    }
    
    /// <summary>
    /// Отменяет редактирование и скрывает форму.
    /// </summary>
    /// <remarks>
    /// Сбрасывает текущий элемент и устанавливает флаг <see cref="showForm"/> в false.
    /// </remarks>
    private void CancelEdit()
    {
        showForm = false;
        currentItem = new Korpus();
    }
}