@page "/operativnaya-pamyati"
@rendermode InteractiveServer
@using PC.Data.Models
@using Microsoft.EntityFrameworkCore;
@inject Microsoft.EntityFrameworkCore.IDbContextFactory<PC.Data.AppDbContext> DbContextFactory
@inject Microsoft.JSInterop.IJSRuntime JSRuntime

<PageTitle>Оперативная память</PageTitle>

<div class="container mt-4">
    <h3><i class="bi bi-memory"></i> Управление оперативной памятью</h3>
    
    <button class="btn btn-primary mb-3" @onclick="ShowAddForm">
        <i class="bi bi-plus-circle"></i> Добавить новую память
    </button>
    
    @if (showForm)
    {
        <div class="card mb-4">
            <div class="card-header">
                @(editingItem == null ? "Добавление оперативной памяти" : "Редактирование оперативной памяти")
            </div>
            <div class="card-body">
                <EditForm Model="@currentItem" OnValidSubmit="@SaveItem">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    
                    <div class="mb-3">
                        <label class="form-label">Модель *</label>
                        <InputText @bind-Value="currentItem.Model" class="form-control" />
                        <ValidationMessage For="@(() => currentItem.Model)" />
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Тип *</label>
                            <InputText @bind-Value="currentItem.Tip" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.Tip)" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Объем модуля (ГБ) *</label>
                            <InputNumber @bind-Value="currentItem.ObyomModulyaGb" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.ObyomModulyaGb)" />
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Частота (МГц) *</label>
                            <InputNumber @bind-Value="currentItem.ChastotaMgts" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.ChastotaMgts)" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Цена (₽) *</label>
                            <InputNumber @bind-Value="currentItem.Tsena" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.Tsena)" />
                        </div>
                    </div>
                    
                    <div class="mt-3">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Сохранить
                        </button>
                        <button type="button" class="btn btn-secondary" @onclick="CancelEdit">
                            <i class="bi bi-x-circle"></i> Отмена
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    }
    
    @if (pamyat == null)
    {
        <div class="alert alert-info">
            <i class="bi bi-hourglass-split"></i> Загрузка данных...
        </div>
    }
    else if (!pamyat.Any())
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Нет данных. Добавьте первую оперативную память.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Модель</th>
                        <th>Тип</th>
                        <th>Объем</th>
                        <th>Частота</th>
                        <th>Цена</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in pamyat)
                    {
                        <tr>
                            <td>@item.Model</td>
                            <td>@item.Tip</td>
                            <td>@item.ObyomModulyaGb ГБ</td>
                            <td>@item.ChastotaMgts МГц</td>
                            <td>@item.Tsena.ToString("N2") ₽</td>
                            <td>
                                <button class="btn btn-sm btn-warning me-2" @onclick="() => EditItem(item)" title="Редактировать">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteItem(item)" title="Удалить">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    /// <summary>
    /// Список оперативной памяти для отображения в таблице.
    /// </summary>
    /// <remarks>
    /// Инициализируется асинхронно в методе <see cref="OnInitializedAsync"/>.
    /// При значении <c>null</c> отображается индикатор загрузки.
    /// </remarks>
    private List<OperativnayaPamyat>? pamyat;
    
    /// <summary>
    /// Флаг, определяющий, отображается ли форма редактирования/добавления.
    /// </summary>
    /// <value>
    /// <c>true</c> - форма отображается; <c>false</c> - форма скрыта.
    /// </value>
    private bool showForm = false;
    
    /// <summary>
    /// Текущий элемент, редактируемый или добавляемый в форме.
    /// </summary>
    /// <remarks>
    /// Содержит временные данные перед сохранением в базу данных.
    /// Сбрасывается при отмене редактирования.
    /// </remarks>
    private OperativnayaPamyat currentItem = new();
    
    /// <summary>
    /// Исходный элемент, который редактируется (если применимо).
    /// </summary>
    /// <remarks>
    /// Используется для отслеживания изменений при редактировании существующей записи.
    /// Имеет значение <c>null</c> при добавлении нового элемента.
    /// </remarks>
    private OperativnayaPamyat? editingItem;
    
    /// <summary>
    /// Метод жизненного цикла компонента, вызываемый при инициализации.
    /// </summary>
    /// <remarks>
    /// Автоматически загружает данные оперативной памяти из базы данных.
    /// Вызывается один раз при создании компонента.
    /// </remarks>
    /// <returns>Задача, представляющая асинхронную операцию.</returns>
    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }
    
    /// <summary>
    /// Загружает данные оперативной памяти из базы данных.
    /// </summary>
    /// <remarks>
    /// Создает новый контекст базы данных, извлекает все записи из таблицы оперативной памяти
    /// и обновляет состояние компонента для перерисовки.
    /// </remarks>
    /// <returns>Задача, представляющая асинхронную операцию.</returns>
    private async Task LoadData()
    {
        using var context = await DbContextFactory.CreateDbContextAsync();
        pamyat = await context.OperativnayaPamyati.ToListAsync();
    }
    
    /// <summary>
    /// Отображает форму для добавления новой оперативной памяти.
    /// </summary>
    /// <remarks>
    /// Сбрасывает состояние формы, создает новый экземпляр <see cref="OperativnayaPamyat"/>
    /// и устанавливает флаг <see cref="showForm"/> в <c>true</c>.
    /// </remarks>
    private void ShowAddForm()
    {
        currentItem = new OperativnayaPamyat();
        editingItem = null;
        showForm = true;
    }
    
    /// <summary>
    /// Подготавливает форму для редактирования выбранной оперативной памяти.
    /// </summary>
    /// <param name="item">Элемент оперативной памяти для редактирования.</param>
    /// <remarks>
    /// Создает копию выбранного элемента для редактирования, сохраняет ссылку на оригинал
    /// и отображает форму редактирования.
    /// </remarks>
    private void EditItem(OperativnayaPamyat item)
    {
        currentItem = new OperativnayaPamyat 
        { 
            Model = item.Model,
            Tip = item.Tip,
            ObyomModulyaGb = item.ObyomModulyaGb,
            ChastotaMgts = item.ChastotaMgts,
            Tsena = item.Tsena
        };
        editingItem = item;
        showForm = true;
    }
    
    /// <summary>
    /// Сохраняет изменения оперативной памяти в базе данных.
    /// </summary>
    /// <remarks>
    /// В зависимости от состояния выполняет одно из следующих действий:
    /// <list type="bullet">
    /// <item>Добавляет новую запись, если <see cref="editingItem"/> равен <c>null</c>.</item>
    /// <item>Обновляет существующую запись, если модель не изменилась.</item>
    /// <item>Удаляет и повторно добавляет запись, если изменился первичный ключ (модель).</item>
    /// </list>
    /// После успешного сохранения скрывает форму, обновляет данные и показывает уведомление.
    /// </remarks>
    /// <returns>Задача, представляющая асинхронную операцию.</returns>
    private async Task SaveItem()
    {
        using var context = await DbContextFactory.CreateDbContextAsync();
    
        try
        {
            if (editingItem == null)
            {
                // Добавление нового элемента
                context.OperativnayaPamyati.Add(currentItem);
            }
            else
            {
                // Проверяем, изменилась ли модель (первичный ключ)
                if (currentItem.Model != editingItem.Model)
                {
                    // Если модель изменилась, нужно удалить старую и добавить новую
                    context.OperativnayaPamyati.Remove(editingItem);
                    context.OperativnayaPamyati.Add(currentItem);
                }
                else
                {
                    // Если модель не изменилась, обновляем существующую запись
                    var entity = context.OperativnayaPamyati
                        .FirstOrDefault(e => e.Model == currentItem.Model);
                
                    if (entity != null)
                    {
                        entity.Tip = currentItem.Tip;
                        entity.ObyomModulyaGb = currentItem.ObyomModulyaGb;
                        entity.ChastotaMgts = currentItem.ChastotaMgts;
                        entity.Tsena = currentItem.Tsena;
                    }
                }
            }
        
            await context.SaveChangesAsync();
            showForm = false;
            await LoadData();
        
            await JSRuntime.InvokeVoidAsync("alert", "Данные успешно сохранены!");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Ошибка: {ex.Message}");
        }
    }
    
    /// <summary>
    /// Удаляет выбранную оперативную память из базы данных.
    /// </summary>
    /// <param name="item">Элемент оперативной памяти для удаления.</param>
    /// <remarks>
    /// Перед удалением запрашивает подтверждение у пользователя через диалоговое окно.
    /// После успешного удаления обновляет данные и показывает уведомление.
    /// </remarks>
    /// <returns>Задача, представляющая асинхронную операцию.</returns>
    private async Task DeleteItem(OperativnayaPamyat item)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", 
            $"Вы уверены, что хотите удалить оперативную память '{item.Model}'?"))
        {
            using var context = await DbContextFactory.CreateDbContextAsync();
            context.OperativnayaPamyati.Remove(item);
            await context.SaveChangesAsync();
            await LoadData();
            
            await JSRuntime.InvokeVoidAsync("alert", "Оперативная память успешно удалена!");
        }
    }
    
    /// <summary>
    /// Отменяет редактирование и скрывает форму.
    /// </summary>
    /// <remarks>
    /// Сбрасывает состояние формы, не сохраняя изменения.
    /// Устанавливает <see cref="showForm"/> в <c>false</c> и создает новый пустой элемент.
    /// </remarks>
    private void CancelEdit()
    {
        showForm = false;
        currentItem = new OperativnayaPamyat();
    }
}