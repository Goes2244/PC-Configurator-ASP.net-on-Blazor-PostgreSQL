@page "/materinskiye-platy"
@rendermode InteractiveServer
@using PC.Data.Models
@using Microsoft.EntityFrameworkCore;
@inject Microsoft.EntityFrameworkCore.IDbContextFactory<PC.Data.AppDbContext> DbContextFactory
@inject Microsoft.JSInterop.IJSRuntime JSRuntime

<PageTitle>Материнские платы</PageTitle>

<div class="container mt-4">
    <h3><i class="bi bi-motherboard"></i> Управление материнскими платами</h3>
    
    <button class="btn btn-primary mb-3" @onclick="ShowAddForm">
        <i class="bi bi-plus-circle"></i> Добавить новую плату
    </button>
    
    @if (showForm)
    {
        <div class="card mb-4">
            <div class="card-header">
                @(editingItem == null ? "Добавление материнской платы" : "Редактирование материнской платы")
            </div>
            <div class="card-body">
                <EditForm Model="@currentItem" OnValidSubmit="@SaveItem">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Модель *</label>
                            <InputText @bind-Value="currentItem.Model" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.Model)" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Форм-фактор *</label>
                            <InputText @bind-Value="currentItem.FormFaktor" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.FormFaktor)" />
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Сокет *</label>
                            <InputText @bind-Value="currentItem.Soket" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.Soket)" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Тип ОЗУ *</label>
                            <InputText @bind-Value="currentItem.TipPodderzhivayemoyOzu" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.TipPodderzhivayemoyOzu)" />
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Макс. объем ОЗУ (ГБ) *</label>
                            <InputNumber @bind-Value="currentItem.MaksimalnyyObyomOzuGb" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.MaksimalnyyObyomOzuGb)" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Тип накопителей *</label>
                            <InputText @bind-Value="currentItem.TipPodderzhivayemixNakopiteli" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.TipPodderzhivayemixNakopiteli)" />
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Цена (₽) *</label>
                        <InputNumber @bind-Value="currentItem.Tsena" class="form-control" />
                        <ValidationMessage For="@(() => currentItem.Tsena)" />
                    </div>
                    
                    <div class="mt-3">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Сохранить
                        </button>
                        <button type="button" class="btn btn-secondary" @onclick="CancelEdit">
                            <i class="bi bi-x-circle"></i> Отмена
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    }
    
    @if (platy == null)
    {
        <div class="alert alert-info">
            <i class="bi bi-hourglass-split"></i> Загрузка данных...
        </div>
    }
    else if (!platy.Any())
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Нет данных. Добавьте первую материнскую плату.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Модель</th>
                        <th>Форм-фактор</th>
                        <th>Сокет</th>
                        <th>Тип ОЗУ</th>
                        <th>Макс. ОЗУ</th>
                        <th>Цена</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in platy)
                    {
                        <tr>
                            <td>@item.Model</td>
                            <td>@item.FormFaktor</td>
                            <td>@item.Soket</td>
                            <td>@item.TipPodderzhivayemoyOzu</td>
                            <td>@item.MaksimalnyyObyomOzuGb ГБ</td>
                            <td>@item.Tsena.ToString("N2") ₽</td>
                            <td>
                                <button class="btn btn-sm btn-warning me-2" @onclick="() => EditItem(item)" title="Редактировать">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteItem(item)" title="Удалить">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    /// <summary>
    /// Коллекция материнских плат, загруженных из базы данных.
    /// </summary>
    /// <value>
    /// Список объектов <see cref="MaterinskayaPlata"/> или null, если данные еще не загружены.
    /// Используется для отображения в таблице.
    /// </value>
    private List<MaterinskayaPlata>? platy;
    
    /// <summary>
    /// Флаг, определяющий отображение формы редактирования/добавления.
    /// </summary>
    /// <value>
    /// true - форма отображается, false - форма скрыта.
    /// </value>
    private bool showForm = false;
    
    /// <summary>
    /// Текущий редактируемый или добавляемый элемент материнской платы.
    /// </summary>
    /// <value>
    /// Объект <see cref="MaterinskayaPlata"/>, содержащий данные для формы.
    /// </value>
    private MaterinskayaPlata currentItem = new();
    
    /// <summary>
    /// Оригинальный редактируемый элемент (при редактировании существующей записи).
    /// </summary>
    /// <value>
    /// Объект <see cref="MaterinskayaPlata"/> или null, если выполняется добавление новой записи.
    /// </value>
    private MaterinskayaPlata? editingItem;
    
    /// <summary>
    /// Метод жизненного цикла компонента, вызываемый при инициализации.
    /// Загружает данные материнских плат из базы данных.
    /// </summary>
    /// <returns>Задача, представляющая асинхронную операцию загрузки данных.</returns>
    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }
    
    /// <summary>
    /// Загружает список материнских плат из базы данных.
    /// </summary>
    /// <returns>Задача, представляющая асинхронную операцию.</returns>
    /// <remarks>
    /// Создает новый контекст базы данных через фабрику и загружает все записи из таблицы материнских плат.
    /// </remarks>
    private async Task LoadData()
    {
        await using var context = await DbContextFactory.CreateDbContextAsync();
        platy = await context.MaterinskiyePlaty.ToListAsync();
    }
    
    /// <summary>
    /// Отображает форму для добавления новой материнской платы.
    /// </summary>
    /// <remarks>
    /// Сбрасывает текущий элемент в новый экземпляр <see cref="MaterinskayaPlata"/>
    /// и устанавливает флаг отображения формы в true.
    /// </remarks>
    private void ShowAddForm()
    {
        currentItem = new MaterinskayaPlata();
        editingItem = null;
        showForm = true;
    }
    
    /// <summary>
    /// Подготавливает форму для редактирования выбранной материнской платы.
    /// </summary>
    /// <param name="item">
    /// Материнская плата (<see cref="MaterinskayaPlata"/>), которую необходимо отредактировать.
    /// </param>
    /// <remarks>
    /// Создает новый объект с копией данных выбранного элемента и сохраняет ссылку на оригинал.
    /// </remarks>
    private void EditItem(MaterinskayaPlata item)
    {
        currentItem = new MaterinskayaPlata 
        { 
            Model = item.Model,
            FormFaktor = item.FormFaktor,
            Soket = item.Soket,
            TipPodderzhivayemoyOzu = item.TipPodderzhivayemoyOzu,
            MaksimalnyyObyomOzuGb = item.MaksimalnyyObyomOzuGb,
            TipPodderzhivayemixNakopiteli = item.TipPodderzhivayemixNakopiteli,
            Tsena = item.Tsena
        };
        editingItem = item;
        showForm = true;
    }
    
    /// <summary>
    /// Сохраняет изменения материнской платы в базе данных.
    /// </summary>
    /// <returns>Задача, представляющая асинхронную операцию сохранения.</returns>
    /// <remarks>
    /// В зависимости от контекста (добавление или редактирование) выполняет соответствующую операцию:
    /// - При добавлении: добавляет новую запись.
    /// - При редактировании: обновляет существующую запись.
    /// - При изменении первичного ключа (Model): удаляет старую и добавляет новую запись.
    /// После успешного сохранения скрывает форму, обновляет данные и показывает уведомление.
    /// При ошибке отображает сообщение об ошибке.
    /// </remarks>
    private async Task SaveItem()
    {
        using var context = await DbContextFactory.CreateDbContextAsync();
    
        try
        {
            if (editingItem == null)
            {
                context.MaterinskiyePlaty.Add(currentItem);
            }
            else
            {
                if (currentItem.Model != editingItem.Model)
                {
                    context.MaterinskiyePlaty.Remove(editingItem);
                    context.MaterinskiyePlaty.Add(currentItem);
                }
                else
                {
                    var entity = context.MaterinskiyePlaty
                        .FirstOrDefault(e => e.Model == currentItem.Model);
                    
                    if (entity != null)
                    {
                        entity.FormFaktor = currentItem.FormFaktor;
                        entity.Soket = currentItem.Soket;
                        entity.TipPodderzhivayemoyOzu = currentItem.TipPodderzhivayemoyOzu;
                        entity.MaksimalnyyObyomOzuGb = currentItem.MaksimalnyyObyomOzuGb;
                        entity.TipPodderzhivayemixNakopiteli = currentItem.TipPodderzhivayemixNakopiteli;
                        entity.Tsena = currentItem.Tsena;
                    }
                }
            }
        
            await context.SaveChangesAsync();
            showForm = false;
            await LoadData();
        
            await JSRuntime.InvokeVoidAsync("alert", "Данные успешно сохранены!");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Ошибка: {ex.Message}");
        }
    }
    
    /// <summary>
    /// Удаляет указанную материнскую плату из базы данных после подтверждения пользователем.
    /// </summary>
    /// <param name="item">
    /// Материнская плата (<see cref="MaterinskayaPlata"/>), которую необходимо удалить.
    /// </param>
    /// <returns>Задача, представляющая асинхронную операцию удаления.</returns>
    /// <remarks>
    /// Перед удалением показывает диалог подтверждения через JavaScript.
    /// Если пользователь подтверждает удаление, выполняет операцию удаления из базы данных,
    /// обновляет список данных и показывает уведомление об успешном удалении.
    /// </remarks>
    private async Task DeleteItem(MaterinskayaPlata item)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"Вы уверены, что хотите удалить материнскую плату '{item.Model}'?"))
        {
            using var context = await DbContextFactory.CreateDbContextAsync();
            context.MaterinskiyePlaty.Remove(item);
            await context.SaveChangesAsync();
            await LoadData();
            
            await JSRuntime.InvokeVoidAsync("alert", "Материнская плата успешно удалена!");
        }
    }
    
    /// <summary>
    /// Отменяет редактирование или добавление материнской платы.
    /// </summary>
    /// <remarks>
    /// Скрывает форму и сбрасывает текущий редактируемый элемент.
    /// </remarks>
    private void CancelEdit()
    {
        showForm = false;
        currentItem = new MaterinskayaPlata();
    }
}