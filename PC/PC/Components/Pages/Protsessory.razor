@page "/protsessory"
@rendermode InteractiveServer
@using PC.Data.Models
@using Microsoft.EntityFrameworkCore;
@inject Microsoft.EntityFrameworkCore.IDbContextFactory<PC.Data.AppDbContext> DbContextFactory
@inject Microsoft.JSInterop.IJSRuntime JSRuntime

<PageTitle>Процессоры</PageTitle>

<div class="container mt-4">
    <h3><i class="bi bi-cpu"></i> Управление процессорами</h3>
    
    <button class="btn btn-primary mb-3" @onclick="ShowAddForm">
        <i class="bi bi-plus-circle"></i> Добавить новый процессор
    </button>
    
    @if (showForm)
    {
        <div class="card mb-4">
            <div class="card-header">
                @(editingItem == null ? "Добавление процессора" : "Редактирование процессора")
            </div>
            <div class="card-body">
                <EditForm Model="@currentItem" OnValidSubmit="@SaveItem">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    
                    <div class="mb-3">
                        <label class="form-label">Модель *</label>
                        <InputText @bind-Value="currentItem.Model" class="form-control" />
                        <ValidationMessage For="@(() => currentItem.Model)" />
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Сокет *</label>
                            <InputText @bind-Value="currentItem.Soket" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.Soket)" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Мощность (Вт) *</label>
                            <InputNumber @bind-Value="currentItem.Moshchnost" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.Moshchnost)" />
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Тактовая частота (ГГц) *</label>
                            <InputNumber @bind-Value="currentItem.TaktovayaChastotaGz" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.TaktovayaChastotaGz)" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Количество ядер *</label>
                            <InputNumber @bind-Value="currentItem.KolichestvoYader" class="form-control" />
                            <ValidationMessage For="@(() => currentItem.KolichestvoYader)" />
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Цена (₽) *</label>
                        <InputNumber @bind-Value="currentItem.Tsena" class="form-control" />
                        <ValidationMessage For="@(() => currentItem.Tsena)" />
                    </div>
                    
                    <div class="mt-3">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Сохранить
                        </button>
                        <button type="button" class="btn btn-secondary" @onclick="CancelEdit">
                            <i class="bi bi-x-circle"></i> Отмена
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    }
    
    @if (protsessory == null)
    {
        <div class="alert alert-info">
            <i class="bi bi-hourglass-split"></i> Загрузка данных...
        </div>
    }
    else if (!protsessory.Any())
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Нет данных. Добавьте первый процессор.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Модель</th>
                        <th>Сокет</th>
                        <th>Мощность</th>
                        <th>Частота</th>
                        <th>Ядра</th>
                        <th>Цена</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in protsessory)
                    {
                        <tr>
                            <td>@item.Model</td>
                            <td>@item.Soket</td>
                            <td>@item.Moshchnost Вт</td>
                            <td>@item.TaktovayaChastotaGz ГГц</td>
                            <td>@item.KolichestvoYader</td>
                            <td>@item.Tsena.ToString("N2") ₽</td>
                            <td>
                                <button class="btn btn-sm btn-warning me-2" @onclick="() => EditItem(item)" title="Редактировать">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteItem(item)" title="Удалить">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    /// <summary>
    /// Список процессоров для отображения в таблице.
    /// </summary>
    private List<Protsessor>? protsessory;
    
    /// <summary>
    /// Флаг, определяющий, отображается ли форма редактирования/добавления.
    /// </summary>
    private bool showForm = false;
    
    /// <summary>
    /// Текущий редактируемый или добавляемый процессор.
    /// </summary>
    private Protsessor currentItem = new();
    
    /// <summary>
    /// Исходный элемент при редактировании (если есть).
    /// </summary>
    private Protsessor? editingItem;
    
    /// <summary>
    /// Инициализирует компонент при загрузке страницы.
    /// Выполняет загрузку данных из базы данных.
    /// </summary>
    /// <remarks>
    /// Этот метод является частью жизненного цикла Blazor-компонента
    /// и вызывается автоматически при инициализации компонента.
    /// </remarks>
    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }
    
    /// <summary>
    /// Загружает список процессоров из базы данных.
    /// </summary>
    /// <remarks>
    /// Создает новый контекст базы данных через фабрику,
    /// выполняет асинхронный запрос на получение всех записей
    /// из таблицы процессоров.
    /// </remarks>
    private async Task LoadData()
    {
        using var context = await DbContextFactory.CreateDbContextAsync();
        protsessory = await context.Protsessory.ToListAsync();
    }
    
    /// <summary>
    /// Показывает форму для добавления нового процессора.
    /// </summary>
    /// <remarks>
    /// Сбрасывает текущий элемент и устанавливает флаг отображения формы.
    /// </remarks>
    private void ShowAddForm()
    {
        currentItem = new Protsessor();
        editingItem = null;
        showForm = true;
    }
    
    /// <summary>
    /// Запускает редактирование выбранного процессора.
    /// </summary>
    /// <param name="item">Процессор для редактирования.</param>
    /// <remarks>
    /// Создает копию выбранного элемента для редактирования
    /// и отображает форму с предзаполненными данными.
    /// </remarks>
    private void EditItem(Protsessor item)
    {
        currentItem = new Protsessor 
        { 
            Model = item.Model,
            Soket = item.Soket,
            Moshchnost = item.Moshchnost,
            TaktovayaChastotaGz = item.TaktovayaChastotaGz,
            KolichestvoYader = item.KolichestvoYader,
            Tsena = item.Tsena
        };
        editingItem = item;
        showForm = true;
    }
    
    /// <summary>
    /// Сохраняет изменения или добавляет новый процессор.
    /// </summary>
    /// <remarks>
    /// В зависимости от режима (добавление или редактирование):
    /// 1. При добавлении: добавляет новый процессор в контекст.
    /// 2. При редактировании с изменением модели: удаляет старую запись и добавляет новую.
    /// 3. При редактировании без изменения модели: обновляет существующую запись.
    /// После успешного сохранения скрывает форму и обновляет данные.
    /// </remarks>
    /// <exception cref="Exception">Может возникнуть при ошибках доступа к базе данных.</exception>
    private async Task SaveItem()
    {
        using var context = await DbContextFactory.CreateDbContextAsync();
    
        try
        {
            if (editingItem == null)
            {
                context.Protsessory.Add(currentItem);
            }
            else
            {
                if (currentItem.Model != editingItem.Model)
                {
                    context.Protsessory.Remove(editingItem);
                    context.Protsessory.Add(currentItem);
                }
                else
                {
                    var entity = context.Protsessory
                        .FirstOrDefault(e => e.Model == currentItem.Model);
                
                    if (entity != null)
                    {
                        entity.Soket = currentItem.Soket;
                        entity.Moshchnost = currentItem.Moshchnost;
                        entity.TaktovayaChastotaGz = currentItem.TaktovayaChastotaGz;
                        entity.KolichestvoYader = currentItem.KolichestvoYader;
                        entity.Tsena = currentItem.Tsena;
                    }
                }
            }
        
            await context.SaveChangesAsync();
            showForm = false;
            await LoadData();
        
            await JSRuntime.InvokeVoidAsync("alert", "Данные успешно сохранены!");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Ошибка: {ex.Message}");
        }
    }
    
    /// <summary>
    /// Удаляет выбранный процессор после подтверждения пользователем.
    /// </summary>
    /// <param name="item">Процессор для удаления.</param>
    /// <remarks>
    /// Показывает диалоговое окно подтверждения через JavaScript.
    /// При подтверждении удаляет запись из базы данных.
    /// </remarks>
    private async Task DeleteItem(Protsessor item)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"Вы уверены, что хотите удалить процессор '{item.Model}'?"))
        {
            using var context = await DbContextFactory.CreateDbContextAsync();
            context.Protsessory.Remove(item);
            await context.SaveChangesAsync();
            await LoadData();
            
            await JSRuntime.InvokeVoidAsync("alert", "Процессор успешно удален!");
        }
    }
    
    /// <summary>
    /// Отменяет редактирование или добавление.
    /// </summary>
    /// <remarks>
    /// Скрывает форму и сбрасывает текущий элемент.
    /// </remarks>
    private void CancelEdit()
    {
        showForm = false;
        currentItem = new Protsessor();
    }
}